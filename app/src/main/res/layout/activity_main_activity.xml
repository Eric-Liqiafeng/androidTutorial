<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/standardActivityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard Activity" />

    <Button
        android:id="@+id/singleTopActivityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTop Button" />

    <Button
        android:id="@+id/singleTaskActivityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleTask Button" />

    <Button
        android:id="@+id/singleInstanceActivityBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleInstance Button" />
</LinearLayout>