<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/basicNotificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="basic notification" />

    <Button
        android:id="@+id/startActivityNotificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start activity notification" />

    <Button
        android:id="@+id/actionButtonNotificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="action button notification" />

    <Button
        android:id="@+id/replyButtonNotificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reply button notification" />
</LinearLayout>